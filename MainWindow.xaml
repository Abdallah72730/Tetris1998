<Window x:Class="Tetris1998.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tetris1998"
        mc:Ignorable="d"
        Title="Tetris" Height="550" Width="700">
    <Grid Margin="10,10,10,14">
        <Canvas x:Name="GameCanvas" Margin="201,20,239,10" Height="480" Width="240" Background="Black"/>
        <Canvas x:Name="PreviewCanvas" Height="120" Width="120" Background="DarkGray" Margin="523,20,37,370"/>
        <TextBlock x:Name="ScoreText"
           Text="Score: 0"
           FontFamily="Courier New"
           FontSize="24"
           FontWeight="Bold"
           Foreground="DarkOrange"
           HorizontalAlignment="Left"
           Margin="30,230,0,230"/>
        <StackPanel Margin="475,210,0,81" >
            <Button  x:Name="RestartButton" Height="30" Width =" 100" Content="Restart" Foreground="Yellow" Background="Purple" Click="RestartButton_Click" Margin="0,0,0,50"/>
            <Button x:Name="PauseButton" Height="30" Width="100" Content="Pause" Foreground="DarkGreen" Background="DeepPink" Margin="0,0,0,50" Click="PauseButton_Click" />
            <Button x:Name="ExitButton" Height="30" Width="100" Content="Exit" Foreground="Blue" Background="Cyan" Click="ExitButton_Click"/>
        </StackPanel>
        <Grid x:Name="GameOverOverlay" Visibility="Collapsed"
          Background="#AA000000" Margin="-12,0,-14,-13">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="GAME OVER"
                       FontSize="48"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

                <Button Content="Restart"
                    Width="120"
                    Height="40"
                    Background="Purple"
                    Foreground="Yellow"
                    Margin="0,0,0,10"
                    Click="RestartButton_Click"/>
                <Button Content="Exit"
                        Width="120"
                        Height="40"
                        Background="Cyan"
                        Foreground="Blue"
                        Click="ExitButton_Click"/>
            </StackPanel>

        </Grid>

    </Grid>
</Window>
